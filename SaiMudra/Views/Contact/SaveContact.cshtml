
@{
    ViewBag.Title = "SaveContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-control {
        border: 1px solid #858080;
    }
</style>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/pages/Contact.js"></script>
<div class="back_re">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h2><i>संपर्क साधा</i> </h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-6">

                <form id="request" class="main_form">
                    <div class="row">
                        <input type="hidden" id="hdnId" />
                        <div class="col-md-12 ">
                            <input class="contactus" placeholder="Name" type="text" name="Name" id="txtName">
                        </div>
                        <div class="col-md-12">
                            <input class="contactus" placeholder="Email" type="text" name="Email" id="txtEmail">
                        </div>
                        <div class="col-md-12">
                            <input class="contactus" placeholder="Mobile" type="text" name="Phone Number" id="txtMobile">
                        </div>
                        <div class="col-md-12 ">
                            <textarea class="textarea" placeholder="Message" type="type" id="txtMessage" Message="Name"></textarea>
                        </div>
                        <div class="col-md-12">

                            <input type="checkbox" id="txtIsActive" name="IsActive">
                            <label>Agree all Terms & Conditions</label>
                        </div>
                        @*<div class="col-md-12">
                                <input class="contactus" placeholder="Createdate" type="date" id="txtCreateDate" name="CreateDate">
                            </div>*@
                        <div class="col-md-12">
                            <input type="button" class="btn-success" value="Submit" onclick="Contactsave()" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="map_main">
                    <div class="map-responsive">
                        <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA0s1a7phLN0iaD6-UE7m4qP-z21pH0eSc&amp;q=Eiffel+Tower+Paris+France" width="600" height="400" frameborder="0" style="border:0; width: 100%;" allowfullscreen=""></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

