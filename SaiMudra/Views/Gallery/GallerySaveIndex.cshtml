
@{
    ViewBag.Title = "GallerySaveIndex";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}
<style>
    .form-control {
        border: 1px solid #858080;
    }
</style>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/pages/Gallery.js"></script>


<main id="main" class="main">
    <input type="hidden" id="hdnId" />
    <div class="card">

        <div class="card-body">
            <h2 class="card-title text-center"><b>Gallery</b></h2>

            <form class="row g-3">
                 <div class="col-sm-6">
                    <label class="form-label"><b>Photo</b></label>
                    <input class="form-control" type="file" id="file1">
                 </div>
                 <div class="col-sm-6">
                    <label class="form-label"><b>Video</b></label>
                    <input class="form-control" type="text" id="txtVideo" placeholder="Video">
                 </div>
                 <div class="col-sm-6">

                    <input class="form-check-input" type="checkbox" id="txtIsActive">
                    <label class="form-check-label">
                        Agree all Terms and Conditions
                    </label>

                 </div>
                 <div class="text-center">
                    <input type="button" value="Submit" class="btn btn-primary" onclick="SaveGallery()" style="width:200px;"/>
                    @*&nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;
                        <button type="reset" class="btn btn-secondary">Reset</button>*@
                </div>
            </form>
    <!-- End No Labels Form -->

        </div>

    </div>
</main>

