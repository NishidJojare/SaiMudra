
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Content/pages/Contact.js"></script>
<div class="back_re">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h2><i>संपर्क साधा</i> </h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!--  contact -->
<div class="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
               
                <form id="request" class="main_form">
                    <div class="row">
                        <div class="col-md-12 ">
                            <input type="hidden" id="hdnId" />
                            <input class="contactus" placeholder="Name" type="text" id="txtName" name="Name">
                        </div>
                        <div class="col-md-12">
                            <input class="contactus" placeholder="Email" type="text" id="txtEmail" name="Email">
                        </div>
                        <div class="col-md-12">
                            <input class="contactus" placeholder="Phone Number" type="text" id="txtMobile" name="Phone Number">
                        </div>
                        <div class="col-md-12">
                            <textarea class="textarea" placeholder="Message" type="type" id="txtMessage" Message="Name">Message</textarea>
                        </div>
                        <div class="col-md-12">
                            <input type="checkbox" id="txtIsActive" />
                            <label>Agree all Term & Condition</label>
                        </div>
                        <div class="col-md-12">
                            @*<button class="send_btn" onclick="SaveContact()">Send</button>*@
                            <input type="button" value="Send" class="btn btn-success" onclick="Contact()"/>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="map_main">
                    <div class="map-responsive">
                        <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA0s1a7phLN0iaD6-UE7m4qP-z21pH0eSc&amp;q=Eiffel+Tower+Paris+France" width="600" height="400" frameborder="0" style="border:0; width: 100%;" allowfullscreen=""></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
